                      "id": {
                        "type": "string",
                        "x-ms-summary": "Time Entry Id"
                      },
                      "description": {
                        "type": "string",
                        "x-ms-summary": "Description"
                      },
                      "projectId": {
                        "type": "string",
                        "x-ms-summary": "Project Id"
                      },
                      "taskId": {
                        "type": "string",
                        "x-ms-summary": "Task Id"
                      },
                      "workspaceId": {
                        "type": "string",
                        "x-ms-summary": "Workspace Id"
                      },
                      "timeInterval": {
                        "type": "object",
                        "properties": {
                          "duration": {
                            "type": "string",
                            "x-ms-summary": "Duration",
                            "description": "The duration of this timesheet entry."
                          },
                          "end": {
                            "type": "string",
                            "x-ms-summary": "End Time"
                          },
                          "start": {
                            "type": "string",
                            "x-ms-summary": "Start Time"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
