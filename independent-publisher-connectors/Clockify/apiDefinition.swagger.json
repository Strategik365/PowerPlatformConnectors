                }
              }
            },
            "x-ms-dynamic-list": {
              "operationId": "GetAllUsers",
              "itemValuePath": "id",
              "itemTitlePath": "name",
              "parameters": {
                "workspace_id": {
                  "parameterReference": "workspace_id"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Time entries list",
