    "/workspaces/{workspace_id}/timeEntries/user/{user_id}": {
      "get": {
        "summary": "List User Time Entries",
        "description": "List User Time Entries",
        "operationId": "GetTimeEntriesForUser",
        "parameters": [
          {
            "$ref": "#/parameters/WorkspaceParamForPath"
          },
          {
            "name": "start",
            "in": "query",
            "description": "Time entries that started after the specified datetime. Datetime must be in ISO-8601 format (eg. 2019-04-16T05:15:32.998Z). You send time according to your account's timezone (from Profile Settings) and get response with time in UTC.",
            "type": "string",
            "required": false,
            "x-ms-summary": "Start",
            "x-ms-visibility": "advanced"
          },
          {
            "name": "end",
            "in": "query",
            "description": "Time entries that ended after the specified datetime. Datetime must be in ISO-8601 format (eg. 2019-04-16T05:15:32.998Z). You send time according to your account's timezone (from Profile Settings) and get response with time in UTC.",
            "type": "string",
            "required": false,
            "x-ms-summary": "End",
            "x-ms-visibility": "advanced"
          },
          {
            "name": "project",
            "in": "query",
            "description": "Time entries will be filtered by project.",
            "type": "string",
            "required": false,
            "x-ms-summary": "Project",
            "x-ms-visibility": "advanced"
          },
          {
            "name": "task",
            "in": "query",
            "description": "Time entries will be filtered by task.",
            "type": "string",
            "required": false,
            "x-ms-summary": "Task",
            "x-ms-visibility": "advanced"
          },
          {
            "name": "user_id",
